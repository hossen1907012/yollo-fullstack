<html>

<head>
    <title>Netflix Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/admin/dashboard.css">
</head>

<body>

    <center>
        <div class="container" style="margin-top: 80px">

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6">

                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#addAMovieModal">+ Add Movie</button>
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#addASeriesModal">+ Add Series</button>
                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                            data-bs-target="#addAPublisherModal">+ Add Publisher</button>
                    </div>
                </div>
            </div>


            @* Modals for movie, series and publisher upload *@
            <!-- Add a new movie -->
            <div class="modal fade" id="addAMovieModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Add a new movie</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
    
                            <div class="container form-container">
                                <form>
                                    <input class="form-control" type="text" placeholder="Movie Title" name='title'> <br>
                                    <textarea class="form-control" id="exampleFormControlTextarea1"
                                        placeholder="Description" rows="2" name='desc'></textarea> <br>

                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Banner</label>
                                        <input class="form-control" type="file" id="formFile" name='banner'>
                                    </div>


                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Movie File</label>
                                        <input class="form-control" type="file" id="formFile" name='movie'>
                                    </div>
                                    <select class="form-select" name="publisher">
                                        <option selected>Publisher</option>
                                        <option value="publisher_id_here">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select> <br>
                                    <input class="form-control" type="number" placeholder="Publishing Year" name="publishing_year"> <br>
                                    <input class="form-control" type="number" placeholder="Age Limit" name="age_limit"><br>
                                </form>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add a new series -->
            <div class="modal fade" id="addASeriesModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Add a new series</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                                 <div class="modal-body">
                            <div class="container form-container">
                                <form>
                                    <input class="form-control" type="text" placeholder="Movie Title" name='title'> <br>
                                    <textarea class="form-control" id="exampleFormControlTextarea1"
                                        placeholder="Description" rows="2" name='desc'></textarea> <br>

                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Banner</label>
                                        <input class="form-control" type="file" id="formFile" name='banner'>
                                    </div>


                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Movie File</label>
                                        <input class="form-control" type="file" id="formFile" name='movie'>
                                    </div>
                                    <select class="form-select" name="publisher">
                                        <option selected>Publisher</option>
                                        <option value="publisher_id_here">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select> <br>
                                    <input class="form-control" type="number" placeholder="Publishing Year" name="publishing_year"> <br>
                                    <input class="form-control" type="number" placeholder="Age Limit" name="age_limit"><br>
                                </form>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add a new publisher -->
            <div class="modal fade" id="addAPublisherModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Add a new Publisher</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                           <div class="modal-body">
  
                            <div class="container form-container">
                                <form>
                                    <input class="form-control" type="text" placeholder="Publisher name" name='publisher_name'> <br>
                                    <input class="form-control" type="number" placeholder="Fouding Year" name="founding_year"><br>
                                </form>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-2">
                    <h1>100+</h1>
                    <h5>Movies Watched</h5>
                </div>
                <div class="col-2">
                    <h1 style="color: rgb(151, 11, 11)">20+</h1>
                    <h5>New Watched</h5>
                    <p><a href="#reviews">check</a></p>

                </div>
            </div>



            <section id="reviews" class="reviews">

            </section>



        </div>
    </center>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>